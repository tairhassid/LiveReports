<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="liveReports.activities.WatchReportActivity"
    android:background="@drawable/background_style">

    <include layout="@layout/general_app_bar"
        android:id="@+id/bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/rel_layout_watch_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#B4CCC9C9"
            android:padding="30dp"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/mainColor"
                android:textStyle="bold"
                android:layoutDirection="ltr"
                android:gravity="left"/>

            <TextView
                android:id="@+id/text_view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@id/text_view_name"
                android:layoutDirection="ltr" />

            <TextView
                android:id="@+id/text_view_report_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_below="@id/text_view_time"
                android:layout_marginTop="10dp"
                android:layoutDirection="ltr" />


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>